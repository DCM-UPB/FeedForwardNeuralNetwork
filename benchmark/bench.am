AM_LDFLAGS += -lffnn
AM_CPPFLAGS += -I../common

if !DEBUG
  AM_CXXFLAGS += $(OPTFLAGS)
endif

if PROFILING
  AM_CXXFLAGS += $(PROFFLAGS)
endif

noinst_PROGRAMS = exe
exe_SOURCES = main.cpp

if PROFILING
run-benchmark: exe
	LD_PRELOAD=/usr/lib/libtcmalloc.so:/usr/lib/libprofiler.so CPUPROFILE=exe.prof ./exe > benchmark_new.out
else
run-benchmark: exe
	./exe > benchmark_new.out
endif
